<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<%= image_tag @pin.image %>
			<p>
			  <b>Description:</b>
			  <%= @pin.description %>
			</p>
			<p>
			  <b>Description:</b>
			  <%= @pin.location %>
			</p>
			<p>
			  <b>Created by:</b>
			  <%= @pin.user.first_name %> <%= @pin.user.last_name %>
			</p>
		</div>
		<% if current_user == @pin.user %>
		<%= link_to 'Edit', edit_pin_path(@pin) %> |
		<% end %>
		<%= link_to 'Back', pins_path %>

		<h4>Comments</h4>
		<% @pin.comments.each do |comment| %>
		  <p>
		    <b>Commenter:</b>
		    <%= comment.commenter %>
		  </p>
		 
		  <p>
		    <b>Comment:</b>
		    <%= comment.body %>
		  </p>
		<% end %>

		<h4>Add a comment:</h4>
		<%= form_for([@pin, @pin.comments.build]) do |f| %>
		  <div class="field">
		    <%= current_user.first_name %>
		  </div>
		  <div class="field">
		    <%= f.label :body %><br />
		    <%= f.text_area :body %>
		  </div>
		  <div class="actions">
		    <%= f.submit %>
		  </div>
		<% end %>


	</div>
</div>


